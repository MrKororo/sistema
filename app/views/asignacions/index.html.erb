<p id="notice"><%= notice %></p>

<h1>Listing Asignacions</h1>

<table>
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Subcategoria</th>
      <th>Asignacion</th>
      <th>Detalle asignacion</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @asignacions.each do |asignacion| %>
      <tr>
        <td><%= asignacion.subcategorium.categorium.categoria %></td>
        <td><%= asignacion.subcategorium.subcategoria %></td>
        <td><%= asignacion.asignacion %></td>
        <td><%= asignacion.detalle_asignacion %></td>
        <td><%= link_to 'Show', asignacion %></td>
        <td><%= link_to 'Edit', edit_asignacion_path(asignacion) %></td>
        <td><%= link_to 'Destroy', asignacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

