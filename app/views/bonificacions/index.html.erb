<p id="notice"><%= notice %></p>

<h1>Listing Bonificacions</h1>

<table>
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Subcategoria</th>
      <th>Detalle bono</th>
      <th>Bono</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @bonificacions.each do |bonificacion| %>
      <tr>
        <td><%= bonificacion.subcategorium.categorium.categoria%></td>
        <td><%= bonificacion.subcategorium.subcategoria %></td>
        <td><%= bonificacion.detalle_bono %></td>
        <td><%= bonificacion.bono %></td>
        <td><%= link_to 'Show', bonificacion %></td>
        <td><%= link_to 'Edit', edit_bonificacion_path(bonificacion) %></td>
        <td><%= link_to 'Destroy', bonificacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

